<Window x:Class="CSharpScriptProcess.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpScriptProcess"
        mc:Ignorable="d"
        Title="CSharpScriptProcess - 設定" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="スクリプトファイルのディレクトリのパス"/>
            <Grid>
                <TextBox x:Name="ScriptFileDirectoryPathTextBox" Width="250" Margin="0,0,39,0"/>
                <Button x:Name="SelectScriptFileDirectoryPathButton" Content="..." ToolTip="選択" HorizontalAlignment="Right" Width="34"/>
            </Grid>
            <Button x:Name="ReloadScriptButton" Content="スクリプト再読み込み" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="0, 10, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>
